{
    "name": "stylescape",
    "description": "Stylescape is a visual identity framework developed by Scape Agency.",
    "version": "0.0.36",
    "config": {
        "version_short": "0.0"
    },
    "keywords": [
        "stylescape",
        "sass",
        "responsive",
        "front-end",
        "layout-engine",
        "framework",
        "web"
    ],
    "homepage": "https://www.scape.style/",
    "author": "Lars van Vianen",
    "contributors": [
        "Scape Agency"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stylescape/stylescape.git"
    },
    "bugs": {
        "url": "https://github.com/stylescape/stylescape/issues"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/scape-foundation"
        }
    ],
    "type": "module",
    "main": "src/ts/index.ts",
    "sass": "src/scss/index.scss",
    "module": "dist/js/stylescape.js",
    "style": "dist/css/stylescape.css",
    "scripts": {
        "format": "npx prettier --write .",
        "lint": "eslint 'src/**/*.ts' || true",
        "prettify": "prettier --write 'src/**/*.ts'",
        "start": "npm run webpack-start",
        "build": "npm run build-compile && npm run build-process",
        "build2": "npm run update && npm run build-compile && npm run build-process",
        "build-compile": "tsc -p bin/tsconfig.json",
        "build-process": "node bin/js/index.js",
        "update": "npm update unit.gl && npm update hue.gl && npm update icon.gl && npm update page.gl",
        "webpack-build": "npm run webpack-prod",
        "webpack-dev": "webpack --mode development --config webpack/webpack.config.js",
        "webpack-prod": "webpack --mode production --config webpack/webpack.config.js",
        "webpack-serve": "webpack serve --mode development --config webpack/webpack.config.js",
        "webpack-start": "webpack-dev-server --mode development --config webpack/webpack.config.js"
    },
    "dependencies": {
        "hue.gl": "^0.0.24",
        "icon.gl": "^0.0.20",
        "move.gl": "^0.0.1",
        "page.gl": "^0.0.3",
        "unit.gl": "^0.0.40"
    },
    "devDependencies": {
        "@types/node": "^22.1.0",
        "@types/nunjucks": "^3.2.2",
        "@types/semver": "^7.5.6",
        "@types/webpack": "^5.28.1",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.0",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^9.0.0",
        "html-webpack-plugin": "^5.5.1",
        "mini-css-extract-plugin": "^2.7.6",
        "node-sass": "^9.0.0",
        "pack.gl": "^0.1.0",
        "path": "^0.12.7",
        "postcss-loader": "^8.1.1",
        "postcss-preset-env": "^10.0.0",
        "prettier": "^3.0.2",
        "sass": "^1.62.1",
        "sass-loader": "^16.0.0",
        "style-loader": "^4.0.0",
        "stylelint-webpack-plugin": "^5.0.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4",
        "webpack": "^5.84.0",
        "webpack-cli": "^6.0.0",
        "webpack-dev-server": "^5.0.4",
        "webpack-merge": "^6.0.1"
    },
    "files": [
        "src/**",
        "dist/**"
    ],
    "exports": {
        ".": {
            "sass": "./scss/index.scss",
            "typescript": "./ts/index.scss"
        }
    }
}
